---
import MarketingLayout from "@/layouts/MarketingLayout.astro";

const features = [
  {
    category: "Comparison",
    items: [
      {
        title: "Side-by-side diff view",
        description:
          "Two-column split layout — original on the left, modified on the right. Changed lines are highlighted with distinct colors for additions and removals.",
      },
      {
        title: "Line-level highlighting",
        description:
          "Each changed line is marked clearly. Unchanged lines are shown for context. Diff summary shows total additions and removals.",
      },
    ],
  },
  {
    category: "Editor",
    items: [
      {
        title: "CodeMirror 6 editor",
        description:
          "A full-featured code editor in each panel — line numbers, syntax highlighting, keyboard-friendly navigation.",
      },
      {
        title: "Syntax highlighting",
        description:
          "Languages supported: JSON, YAML, JavaScript, TypeScript, Python, Markdown, XML, HTML, and plain text.",
      },
      {
        title: "Language selector",
        description:
          "Choose the language for each panel independently. The editor will highlight syntax accordingly.",
      },
    ],
  },
  {
    category: "Input",
    items: [
      {
        title: "Paste text",
        description: "Type or paste any text directly into the editor panels. No file required.",
      },
      {
        title: "Drag & drop files",
        description:
          "Drag any text file from your filesystem and drop it onto a panel to load its contents.",
      },
      {
        title: "File open button",
        description: "Click the Open File button (or press Ctrl+O) to use the native file picker.",
      },
    ],
  },
  {
    category: "PWA & Offline",
    items: [
      {
        title: "Installable",
        description: "Add twish to your home screen or desktop from the browser's install prompt.",
      },
      {
        title: "Fully offline",
        description:
          "After the first visit, twish works with no internet connection. All assets are cached by the service worker.",
      },
      {
        title: "No data sent anywhere",
        description:
          "There is no server. No file contents, no diffs, no usage data leaves your device.",
      },
    ],
  },
  {
    category: "Keyboard Shortcuts",
    items: [
      {
        title: "Ctrl+Enter — Compare",
        description: "Run the comparison and render the diff view.",
      },
      {
        title: "Ctrl+O — Open file",
        description: "Open the file picker for the currently focused panel.",
      },
      {
        title: "Ctrl+Shift+C — Clear",
        description: "Clear both editor panels and reset the diff view.",
      },
    ],
  },
];
---

<MarketingLayout title="Features — twish">
  <div class="page-wrap">
    <h1 class="page-heading">Features</h1>
    <p class="page-sub">Everything twish can do — and what's coming next.</p>

    <div class="sections">
      {
        features.map((section) => (
          <div class="section">
            <div class="category-label">{section.category}</div>
            <div class="item-list">
              {section.items.map((item) => (
                <div class="item">
                  <h3 class="item-title">{item.title}</h3>
                  <p class="item-desc">{item.description}</p>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</MarketingLayout>

<style>
  .page-wrap {
    max-width: 56rem;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  .page-heading {
    font-family: "Bebas Neue", sans-serif;
    font-size: 4rem;
    letter-spacing: 0.05em;
    color: var(--brutal-black);
    margin-bottom: 0.5rem;
  }

  .page-sub {
    font-size: 0.9rem;
    color: #444;
    margin-bottom: 3rem;
  }

  .sections {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .category-label {
    display: inline-block;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    background: var(--brutal-yellow);
    border: 3px solid var(--brutal-black);
    padding: 0.2rem 0.6rem;
    margin-bottom: 1rem;
  }

  .item-list {
    border: 3px solid var(--brutal-black);
  }

  .item {
    padding: 1rem 1.25rem;
    border-bottom: 3px solid var(--brutal-black);
  }

  .item:last-child {
    border-bottom: none;
  }

  .item-title {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--brutal-black);
    margin-bottom: 0.35rem;
  }

  .item-desc {
    font-size: 0.85rem;
    color: #444;
    line-height: 1.6;
  }
</style>
