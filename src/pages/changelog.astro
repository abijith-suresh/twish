---
import MarketingLayout from "@/layouts/MarketingLayout.astro";

const releases = [
  {
    version: "0.1.0",
    date: "2026-02-22",
    tag: "Initial release",
    changes: [
      "Side-by-side diff view with line-level highlighting",
      "CodeMirror 6 editors with syntax highlighting (JSON, YAML, JS/TS, Python, Markdown, XML)",
      "Drag & drop file loading",
      "Language selector per panel",
      "Compare, Swap, and Clear toolbar",
      "Keyboard shortcuts: Ctrl+Enter, Ctrl+O, Ctrl+Shift+C",
      "PWA: installable + fully offline via service worker",
      "Pages: landing, features, about, docs, changelog",
    ],
  },
];
---

<MarketingLayout title="Changelog â€” twish">
  <div class="mx-auto max-w-3xl px-4 py-16 sm:px-6">
    <h1 class="mb-8 text-3xl font-bold text-white">Changelog</h1>

    <div class="space-y-10">
      {
        releases.map((release) => (
          <div>
            <div class="mb-4 flex flex-wrap items-baseline gap-3">
              <h2 class="text-xl font-bold text-white">v{release.version}</h2>
              {release.tag && (
                <span class="rounded-full bg-indigo-900/50 px-2.5 py-0.5 text-xs font-medium text-indigo-300 ring-1 ring-indigo-700">
                  {release.tag}
                </span>
              )}
              <time class="text-sm text-slate-500" datetime={release.date}>
                {new Date(release.date).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>
            </div>
            <ul class="space-y-2">
              {release.changes.map((change) => (
                <li class="flex gap-3 text-sm text-slate-300">
                  <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-indigo-500" />
                  {change}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</MarketingLayout>
