---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Astro Template">
  <main class="flex min-h-screen flex-col items-center justify-center bg-gray-950 text-white">
    <div class="text-center">
      <h1 class="mb-4 text-5xl font-bold tracking-tight">Astro Template</h1>
      <p class="mb-8 text-lg text-gray-400">
        Your new project is ready. Start building something great.
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="https://docs.astro.build"
          class="rounded-lg bg-indigo-600 px-6 py-3 font-medium transition-colors hover:bg-indigo-500"
          target="_blank"
          rel="noopener noreferrer"
        >
          Astro Docs
        </a>
        <a
          href="https://tailwindcss.com/docs"
          class="rounded-lg border border-gray-700 px-6 py-3 font-medium transition-colors hover:bg-gray-800"
          target="_blank"
          rel="noopener noreferrer"
        >
          Tailwind Docs
        </a>
      </div>
    </div>
  </main>
</Layout>
